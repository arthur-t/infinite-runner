<GridPane alignment="TOP_CENTER"  prefHeight="130.0" prefWidth="360.0" styleClass="main" stylesheets="@stylesheets/Global.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EnterPseudo">
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints fillHeight="false" maxHeight="139.0" minHeight="10.0" percentHeight="60.0" prefHeight="100.0" vgrow="NEVER" />
    <RowConstraints maxHeight="327.0" minHeight="10.0" percentHeight="40.0" prefHeight="136.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="327.0" minHeight="10.0" percentHeight="40.0" prefHeight="136.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" styleClass="title" text="Entrez votre pseudo" textAlignment="CENTER" GridPane.columnSpan="2">
         <font>
            <Font size="38.0" />
         </font>
      </Label>
      <TextField fx:id="pseudoEntry" alignment="CENTER" prefHeight="26.0" prefWidth="271.0" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="30.0" right="30.0" />
         </GridPane.margin>
      </TextField>
      <Button fx:id="validateButton" onAction="#clickValidate" text="Validate" GridPane.columnIndex="1" GridPane.rowIndex="1"  />
      
   </children>
